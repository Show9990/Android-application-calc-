<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotationX="4"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="358dp"
        android:layout_height="78dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="29dp"
        android:text="Enter value of cofficients a,b,c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="126dp"
        android:layout_height="61dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="16dp"
        android:text="Enter value of &quot;a&quot;"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_a"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="text"
        android:text="a"
        app:layout_constraintBottom_toTopOf="@+id/et_b"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="126dp"
        android:layout_height="56dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="19dp"
        android:text="Enter value of &quot;b&quot;"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_b"
        android:layout_width="235dp"
        android:layout_height="57dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="text"
        android:text="b"
        app:layout_constraintBottom_toTopOf="@+id/et_c"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="122dp"
        android:layout_height="59dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="18dp"
        android:text="Enter value of &quot;c&quot;"
        app:layout_constraintBottom_toTopOf="@+id/res"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_c"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="text"
        android:text="c"
        app:layout_constraintBottom_toTopOf="@+id/res"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/res"
        android:layout_width="351dp"
        android:layout_height="77dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="22dp"
        android:text="result"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/result"
        android:layout_width="134dp"
        android:layout_height="63dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="185dp"
        android:text="CALCULATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>